<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane maxHeight="600" maxWidth="515" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">
    <children>
       <Label text="Fahrenheit" GridPane.halignment="CENTER" GridPane.hgrow="always" GridPane.vgrow="always"/>
       <Label text="Celsius" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.hgrow="always" GridPane.vgrow="always"/>
       <Slider fx:id="slider" max="200.0" min="-200.0" onMouseClicked="#initialize" value="32.0" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.hgrow="always" GridPane.vgrow="always"/>
       <TextField fx:id="fahrenheitTextField" alignment="CENTER" editable="false" focusTraversable="false" text="32.00" GridPane.columnIndex="1" GridPane.hgrow="always" GridPane.vgrow="always"/>
       <TextField fx:id="celsiusTextField" alignment="CENTER" editable="false" focusTraversable="false" text="0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="always" GridPane.vgrow="always"/>
   </children>
</GridPane>
